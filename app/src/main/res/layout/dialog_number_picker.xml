<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/circle_picker_heading"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="How many observations?"
        android:textSize="22sp"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/start_number_subheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:text="This is the number that will be appended to the first observation file. Subsequent observations will use the numbers following this."/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <org.angmarch.circledpicker.CircledPicker
            android:id="@+id/circled_picker"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="0.8"
            android:layout_marginBottom="10dp"
            app:lineColor="@color/defaultLineColor"
            app:subLineColor="@color/defaultSubLineColor"
            app:textColor="@color/defaultSubLineColor"
            app:pickerMode="numeric"
            app:maxValue="10"
            app:step="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

    </LinearLayout>



</LinearLayout>