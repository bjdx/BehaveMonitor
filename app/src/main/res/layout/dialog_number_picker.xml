<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/start_number_subheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="18dp"
        android:text="This is the number that will be appended to the first observation file. Subsequent observations will use the numbers following this."/>

        <org.angmarch.circledpicker.CircledPicker
            android:id="@+id/circled_picker"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:lineColor="@color/defaultLineColor"
            app:subLineColor="@color/defaultSubLineColor"
            app:textColor="@color/defaultSubLineColor"
            app:pickerMode="numeric"
            app:maxValue="10"
            app:step="1" />

</LinearLayout>