<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!--<item name="android:textColor">#000</item>-->
        <item name="android:actionBarStyle">@style/BlackActionBar</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/BlackActionBar</item>
        <!--<item name="editTextStyle">@style/App_EditTextStyle</item>-->
    </style>

    <style name="BlackActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/black</item>
        <item name="android:titleTextStyle">@style/WhiteActionBarTitle</item>

        <!-- Support library compatibility -->
        <item name="background">@color/black</item>
        <item name="titleTextStyle">@style/WhiteActionBarTitle</item>
    </style>

    <style name="WhiteActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App_EditTextStyle" parent="Widget.AppCompat.EditText">
        <!--<item name="android:layout_marginLeft">0dp</item>-->
        <!--<item name="android:paddingLeft">2dp</item>-->
    </style>

</resources>
